{% extends 'users/app.twig' %}

{% block title %} E-Learning - {{article.title}} {% endblock %}

{% block content %}
    {% if article == false %}
        <div class="jumbotron">
            <h1>Article Not Found</h1>
        </div>
    {% else %}
            <div class="container">
                <div class="well">
                    <h1>
                        {{article.title}}
                    </h1>
                    <br>
                    <ul class="list-inline pull-left">
                        {% for category in article.category %}
                            <label for="{{category}}" class="label label-primary">{{category}}</label>
                        {% endfor %}
                        <li><i class="fa fa-user"> <b>{{article.username}}</b></i></li>
                        <li><p class="item">{{article.publish_at|date('D, F d Y')}}</p></li>
                    </ul>
                    <br>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="well">
                            {{article.content|raw}}
                        </div>
                    </div>
                </div>
            </div>
    {% endif %}
{% endblock %}
