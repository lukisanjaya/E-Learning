{% extends 'users/app.twig' %}

{% block title %} E-Learning - Courses {% endblock %}

{% block css %}
    <style>
        .item{
          font-size: .85em;
          color: #9f9f9f;
        }
    </style>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-9">
        {% if course.content == false %}
            <div class="jumbotron">
                <h3>Sorry, We haven't course yet</h3>
            </div>
        {% else %}
            {% for data in course.content.data %}
                <div class="col-lg-12">
                    <div class="well">
                        <h3><a href="{{path_for('web.course.slug', {slug: data.title_slug})}}">{{data.title}}</a></h3>
                        <p>
                        </p>
                        <br>
                        {% for category in data.category %}
                            <label for="{{category}}" class="label label-primary">{{category}}</label>
                        {% endfor %}
                        <hr>
                        <ul class="list-inline">
                            <li><i class="fa fa-user"> <b>{{data.username}}</b></i></li>
                            <li><p class="item">{{data.publish_at|date('D, F d Y')}}</p></li>
                            <li><i class="fa fa-tasks item"> {{data.video}} parts</i></li>
                            {% if data.type == 0 %}
                                <li><label for="type" class="label label-default">Free</label></li>
                            {% else %}
                                <li><label for="type" class="label label-primary">Premium</label></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
            <nav aria-label="...">
              <ul class="pager">
                <li class="previous">
                  {% if course.content.current ==1 %}
                    <a disabled>
                  {% else %}
                    <a href="{{path_for('web.course.show.for.user')}}?page={{course.content.current - 1}}">
                  {% endif %}
                        <span aria-hidden="true">&larr;</span>
                    Prev
                    </a>
                </li>
                <li class="next">
                  {% if course.content.current == course.content.total_page %}
                    <a disabled>
                  {% else %}
                    <a href="{{path_for('web.course.show.for.user')}}?page={{course.content.current + 1}}">
                  {% endif %}
                      Next <span aria-hidden="true">&rarr;</span>
                    </a>
                </li>
            </ul>
        </nav>
        {% endif %}
    </div>
    <div class="col-lg-3">
        <div class="row">
            <div class="col-lg-12">
                <div class="well">
                <form method="get" action="{{path_for('web.course.search')}}">
                    <div class="form-group">
                        <input type="text" name="query" class="form-control" id="navbar-search-input" placeholder="Search">
                    </div>
                </form>
                </div>
            </div>
            <div class="col-lg-12">
                <ul class="list-group">
                    <li class="list-group-item"><b>By subject</b></li>
                    <li class="list-group-item"><a href="{{path_for('web.article.show.for.user')}}">All</a></li>
                    {% for category in course.category %}
                        <li class="list-group-item"><a href="{{path_for('web.course.category', {category: category.name})}}">{{category.name}}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
